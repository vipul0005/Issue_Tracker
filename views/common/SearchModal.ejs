<div id="searchModal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="get" action="/project-details/<%= projectId %>">
        <div class="modal-header">
          <h5 class="modal-title">Search Issues</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="searchQuery" class="form-label">Search by Title or Description:</label>
            <input type="text" class="form-control" id="searchQuery" name="searchQuery" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>
