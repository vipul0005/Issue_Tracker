<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://kit.fontawesome.com/8281cb5644.js" crossorigin="anonymous"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include ('common/Nav');%>

    <div
      class="w-100 text-dark d-flex flex-wrap justify-content-center justify-content-md-start p-3 bg-dark bg-gradient"
      style="min-height: calc(80vh - 50px)"
    >
      <!-- Create Poject  -->

      <a class="text-decoration-none" href="/create-project">
        <div
          class="card m-3 text-center p-3 border rounded text-bg-light border-primary shadow"
          style="width: 290px; min-height: 180px"
        >
          <div class="card-body">
            <img
              src="/views/icons8-create-96.png"
              alt="Logo"
              class="img-fluid"
              style="max-width: 50px"
            />
            <div class="font-monospace fs-3 fw-semibold mt-4">Create Project</div>
          </div>
        </div>
      </a>

      <% projects.forEach(project => { %>

      <div
        class="card m-3 text-center p-3 border rounded text-bg-info border-light shadow"
        style="min-width: 290px; height: 180px"
      >
        <div class="card-body">
          <h5 class="card-title -mt-2 fw-bold fs-2 font-monospace text-white">
            <%= project.name %>
          </h5>
          <p class="card-text mt-1 fs-5 text-white">Author-<%= project.author %></p>
          <a href="/project-details/<%= project._id %>" class="btn btn-light -mt-1 shadow"
            >View Project</a
          >
        </div>
      </div>

      <% }); %>
    </div>

    <%- include ('common/Footer');%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
