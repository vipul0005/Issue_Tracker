<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title></title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://kit.fontawesome.com/8281cb5644.js" crossorigin="anonymous"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include ('common/Nav');%>

    <div
      class="w-100 text-dark d-flex flex-wrap justify-content-center p-1 p-sm-5 bg-dark bg-gradient"
      style="min-height: calc(80vh - 50px)"
    >
      <div class="card w-100 text-center" style="height: fit-content">
        <div class="card-header bg-primary text-white fs-2 p-auto" style="height: 70px">
          Project Details
        </div>
        <div class="card-body p-0">
          <div class="my-3 d-flex justify-content-center p-2">
            <h5 class="card-title fs-1 fw-bolder my-2 mx-2"><%= project.name %></h5>
          </div>
          <div
            class="card-text bg-secondary-subtle text-emphasis-secondary d-flex justify-content-start p-3"
          >
            <span class="fs-2 fw-bolder text-success"> Description: </span>
            <p class="fs-3 pt-1 mx-2 text-start"><%= project.description %></p>
          </div>
          <div class="card-text bg-info-subtle text-emphasis-info d-flex justify-content-start p-3">
            <span class="fs-2 fw-bolder text-danger">Author: </span>
            <p class="fs-3 pt-1 mx-2 text-start"><%= project.author %></p>
          </div>

          <!-- ----------------------------------------------------------------------  -->

          <div
            class="card-text bg-success-subtle text-emphasis-success d-flex justify-content-md-evenly justify-content-center flex-wrap p-3"
          >
            <button
              type="button"
              class="btn btn-primary fs-3 m-2"
              onclick="toggleAllIssues()"
              id="showIssueBtn"
            >
              Show Issues
            </button>

            <!-- <a
              href="/filter-issue/<%= project._id %>"
              class="btn btn-primary fs-3 m-2"
              data-bs-toggle="modal"
              data-bs-target="#filterModal"
              >Filter Issues</a
            > -->
            <button
              type="button"
              class="btn btn-primary fs-3 m-2"
              data-bs-toggle="modal"
              data-bs-target="#filterModal"
            >
              Filter Issues
            </button>

            <%- include ('common/FilterModal', { projectId:project._id }) ;%>

            <button
              type="button"
              class="btn btn-primary fs-3 m-2"
              data-bs-toggle="modal"
              data-bs-target="#searchModal"
            >
              Search Issues
            </button>
            <%- include ('common/SearchModal', { projectId:project._id });%>

            <a href="/create-issue/<%= project._id %>" class="btn btn-danger fs-4 my-2 ms-md-auto"
              >Create Issue</a
            >
          </div>
          <!-- -------------------------------------------------------------------------------------  -->

          <div id="all-issues-container" style="display: none">
            <!-- if condition  -->
            <% if (issues.length > 0) { %>
            <!-- Issue  -->

            <% issues.forEach(issue => { %>

            <div
              class="card-text bg-danger-subtle text-emphasis-danger d-flex flex-column text-start p-3 mt-2 border-danger border-3 rounded-2 fs-5"
            >
              <p class="fw-bolder fs-3">Title: <%= issue.issueTitle %></p>
              <p class="fw-medium lead">Description: <%= issue.issueDescription %></p>
              <p class="fw-normal">Label: <%= issue.issueLabel %></p>
              <p class="fw-medium">Author: <%= issue.issueAuthor %></p>
            </div>

            <% }); %> <% } else { %>
            <div
              class="card-text bg-danger-subtle text-emphasis-danger d-flex flex-column text-center p-3 mt-2 border-danger border-3 rounded-2 fs-2"
            >
              <p class="fw-bolder">No Issues Found.</p>
            </div>
            <% } %>

            <!-- Issue end  -->
          </div>
        </div>
      </div>
    </div>

    <%- include ('common/Footer');%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="/views/ProjectDetails.js"></script>
  </body>
</html>
